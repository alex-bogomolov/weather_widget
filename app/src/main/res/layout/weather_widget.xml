<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="200dp"
    android:layout_height="150dp" android:id="@+id/layout">

    <TextView
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/temperature" android:text="Temperature"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/pressure" android:text="Pressure"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/humidity" android:text="Humidity"/>

    <TextView
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/wind" android:text="Wind"/>


</LinearLayout>